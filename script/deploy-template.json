{
  "serviceName": "account-merchant-sample",
  "containers": {
    "nginx-proxy": {
      "image": "$NGINX_IMAGE_NAME",
      "ports": {
        "80": "HTTP"
      },
      "environment": {
        "NGINX_ENVSUBST_OUTPUT_DIR": "/etc/nginx"
      }
    },
    "account-integration-sample": {
      "image": "$ACCOUNT_IMAGE_NAME",
      "ports": {
        "3001": "HTTP"
      },
      "environment": {
        "MERCHANT_SERVER_URL": "https://merchant-1.samples.dev.openfabric.co",
        "ACCOUNT_SERVER_URL": "https://of-test-1.samples.dev.openfabric.co"
      }
    },
    "merchant-integration-sample": {
      "image": "$MERCHANT_IMAGE_NAME",
      "ports": {
        "3000": "HTTP"
      }
    }
  },
  "publicEndpoint": {
    "containerName": "nginx-proxy",
    "containerPort": 80,
    "healthCheck": {
      "healthyThreshold": 2,
      "intervalSeconds": 300,
      "path": "/",
      "successCodes": "200-499",
      "timeoutSeconds": 2,
      "unhealthyThreshold": 2
    }
  }
}